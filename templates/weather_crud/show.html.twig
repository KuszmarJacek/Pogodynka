{% extends 'base.html.twig' %}

{% block title %}Weather{% endblock %}

{% block body %}
    <h1>Weather</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ weather.date ? weather.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Max_temp</th>
                <td>{{ weather.maxTemp }}</td>
            </tr>
            <tr>
                <th>Min_temp</th>
                <td>{{ weather.minTemp }}</td>
            </tr>
            <tr>
                <th>Pressure</th>
                <td>{{ weather.pressure }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ weather.humidity }}</td>
            </tr>
            <tr>
                <th>Precipitation</th>
                <td>{{ weather.precipitation }}</td>
            </tr>
            <tr>
                <th>Sunny</th>
                <td>{{ weather.sunny ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Cloudy</th>
                <td>{{ weather.cloudy ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Fog</th>
                <td>{{ weather.fog ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Raining</th>
                <td>{{ weather.raining ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Lightning</th>
                <td>{{ weather.lightning ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Snow</th>
                <td>{{ weather.snow ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Wind</th>
                <td>{{ weather.wind ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Tornado</th>
                <td>{{ weather.tornado ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_weather_crud_index') }}">back to list</a>

    <a href="{{ path('app_weather_crud_edit', {'id': weather.id}) }}">edit</a>

    {{ include('weather_crud/_delete_form.html.twig') }}
{% endblock %}
